<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-4">Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign Up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>