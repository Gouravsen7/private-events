<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-4">Change Your Password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New Password", class: "block text-gray-700 font-bold mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-600"><em>(<%= @minimum_password_length %> characters minimum)</em></span><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm New Password", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Change My Password", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
