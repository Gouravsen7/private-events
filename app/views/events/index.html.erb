<p style="color: green"><%= notice %></p>

<div class="container mx-auto">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-semibold">Events</h1>

    <%= link_to "New event", new_event_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded" %>
  </div>

  <div id="listing" class="bg-white shadow-md rounded-lg p-6 mb-4">
  <div class="border border-gray-300 rounded-lg">
    <div class="flex">
      <%= link_to root_path(), class: "tab-button w-full py-2 px-4 text-sm font-medium text-gray-600 bg-gray-100 bg-gray-200 rounded-t-lg hover:bg-gray-200 focus:outline-none focus:bg-gray-200" do %>
        All <span class="badge rounded-full bg-blue-500 text-white text-xs px-2"><%= @all_count %></span>
      <% end %>

      <%= link_to root_path(event_category: 'past'), class: "tab-button w-full py-2 px-4 text-sm font-medium text-gray-600 bg-gray-100 bg-gray-200 rounded-t-lg hover:bg-gray-200 focus:outline-none focus:bg-gray-200" do %>
        Past <span class="badge rounded-full bg-blue-500 text-white text-xs px-2"><%= @past_count %></span>
      <% end %>

      <%= link_to root_path(event_category: 'active'), class: "tab-button w-full py-2 px-4 text-sm font-medium text-gray-600 bg-gray-100 bg-gray-200 rounded-t-lg hover:bg-gray-200 focus:outline-none focus:bg-gray-200" do %>
        Active <span class="badge rounded-full bg-blue-500 text-white text-xs px-2"><%= @active_count %></span>
      <% end %>

      <%= link_to root_path(event_category: 'upcoming'), class: "tab-button w-full py-2 px-4 text-sm font-medium text-gray-600 bg-gray-100 bg-gray-200 rounded-t-lg hover:bg-gray-200 focus:outline-none focus:bg-gray-200" do %>
        Upcoming <span class="badge rounded-full bg-blue-500 text-white text-xs px-2"><%= @upcoming_count %></span>
      <% end %>
    </div>


    <div class="p-4">
        <%= render partial: "events/events", locals: { current_user: current_user, events: @events } %>
    </div>
  </div>
</div>


